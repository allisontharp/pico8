fish = {
	x = 0,
	y = flr(rnd(max_screen)),
	dx = rnd(max_fish_speed - 0.5),
	dy = 0,
	clr = 0,
	evolution = minnow,
	flip = false,

	new = function(self, tbl)
		tbl = tbl or {}
		setmetatable(
			tbl, {
				__index = self
			}
		)

		tbl.clr = flr(rnd(16))
		if tbl.clr == 1 or tbl.clr == 12 then
			tbl.clr = 3
		end

		tbl.x = 0
		if flr(rnd(1) * 100) % 2 == 0 then
			tbl.x = max_screen
		end
		if tbl.dx <= 0.1 then tbl.dx = 0.1 end
		if tbl.x == max_screen then
			tbl.dx *= -1
			tbl.flip = true
		end
		return tbl
	end,

	update = function(self)
		self.x += self.dx
		self.y += self.dy

		if self.x <= 0 or self.y <= 0
				or self.x >= max_screen or self.y >= max_screen then
			del(fishes, self)
		end
		check_col(self)
	end,

	draw = function(self)
		pal(9, self.clr)
		-- animate
		local s = self.evolution.spr
		if ani >= 2 then
			s += 16
		end
		-- sprite widths
		local w = 1
		local h = 1
		if self.evolution.spr >= 5 then
			w = 2
		end
		spr(s, self.x, self.y, w, h, self.flip)
		pal()
	end
}

