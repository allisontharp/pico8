-- bubbles
bubble = {
	x = 64,
	y = 128,
	x_init = 64,
	dx = 0,
	dy = .5,
	rad = 0,
	clr = 13,
	freq = 0,

	new = function(self, tbl)
		tbl = tbl or {}
		setmetatable(
			tbl, {
				__index = self
			}
		)
		tbl.x_init = tbl.x
		return tbl
	end,

	update = function(self)
		self.y -= self.dy
		self.x = self.x_init + 3 * sin(t() * self.freq)

		if self.y < 0 then
			del(bubbles, self)
			local bubble_type = rnd(bubble_types)
			add(
				bubbles, bubble_type:new({
					x = rnd(127),
					y = 127
				})
			)
		end
	end,

	draw = function(self)
		circfill(
			self.x,
			self.y,
			self.rad,
			self.clr
		)
	end
}

far_bubble = bubble:new({
