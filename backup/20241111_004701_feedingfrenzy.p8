function update_game()
	player.dx = 0
	player.dy = 0
	if btnp(â¬…ï¸) then
		player.dx = -1 * p_speed
		player.flip = true
	end
	if btnp(âž¡ï¸) then
		player.dx = 1 * p_speed
		player.flip = false
	end
	if (btnp(â¬†ï¸)) player.dy = -1 * p_speed
	if (btnp(â¬‡ï¸)) player.dy = 1 * p_speed
	if flr(rnd(100)) > 95 and #fishes < max_enemies + 1 and not test_hitbox then
		x = 0
		if flr(rnd(1) * 100) % 2 == 0 then
			x = max_screen
		end
		add_new_fish()
	end

	if btnp(âŽ) then
		if player.xp >= player.evolution.xp_to_evolve then
			player.evolution = evolution_types[player.evolution.evolution_number + 1]
			player.xp = 0
		end
	end
	if btnp(ðŸ…¾ï¸) then
		if player.xp >= player.evolution.xp_to_evolve then
			p_speed += 0.5
			player.xp = 0
		end
	end
	if ani < 2.9 then
		ani += 0.1
	else
		ani = 1
	end

	for f in all(fishes) do
		f:update()
	end

	for bubble in all(bubbles) do
		bubble:update()
	end
end

